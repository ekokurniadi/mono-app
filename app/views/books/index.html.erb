<%= link_to "New Book", new_book_path %>
<%= link_to "Active Book", active_books_path %>
<table border="1">
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Page</th>
    <th>Description</th>
    <th>Status</th>
    <th>Action</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.id %>
      </td>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.page %>
      </td>
      <td>
        <%= book.description %>
      </td>
      <td>
        <%= book.status %>
      </td>
      <td>
        <%= link_to "non_active",toggle_book_path(book.id),data:{turbo_method: :patch, turbo_confirm: "Are you sure"} %>
        <%= link_to "show",book_path(book) %>
        <%= link_to "edit", edit_book_path(book) %>
        <%= link_to "delete",book_path(book.id),data:{turbo_method: :delete, turbo_confirm: "Are you sure"} %>
      </td>
    </tr>
  <%end%>
</table>
