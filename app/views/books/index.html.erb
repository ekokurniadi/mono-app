<table border="1">
    <tr>
        <th>Title</th>
        <th>Page</th>
        <th>Description</th>
    </tr>
    <% @books.each do |book| %>
        <tr>
            <td>
                <%= book.title %>
            </td>
            <td>
                <%= book.page %>
            </td>
            <td>
                <%= book.description %>
            </td>
        </tr>
    <%end%>
</table>