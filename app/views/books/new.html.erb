<%if @book.errors.any?%>
  <div>
    <% @book.errors.full_messages.each do |msg| %>
     <div><%= msg %></div>
    <% end %>
  </div>
<%end%>
<%=form_for(@book) do |f|%>
  <div>
    <%=f.label :title%>
    <%=f.text_field :title%>
  </div>
  <div>
    <%=f.label :page%>
    <%=f.text_field :page%>
  </div>
  <div>
    <%=f.label :description%>
    <%=f.rich_text_area :description%>
  </div>
  <div>
    <%=f.submit 'data-turbo': false%>
  </div>
<% end %>
